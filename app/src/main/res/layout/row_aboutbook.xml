<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_mybookinfo"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="15dip"
    android:paddingTop="10dip" 
    android:paddingBottom="10dip"
    android:paddingRight="15dip"
    android:gravity="center_vertical"
    >
    <ImageView 
        android:id="@+id/iv_mybookinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_action_info"
        />
    <TextView
       android:layout_marginLeft="20dip"
        android:id="@+id/tv1_mybookinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的预约信息"
        android:textColor="#000000"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/id_main_tab_03_istview_item_num_textview"
        android:background="@drawable/shape_main_tab_03_listview_item_num"
        android:layout_marginLeft="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="10sp"
        android:text="99+"
        android:textColor="#EEEEEE"
        android:visibility="invisible"
        />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text=""
        android:gravity="right"
        android:textColor="#C0C0C0"
        android:textSize="18sp"
        android:drawableRight="@drawable/next_indicator_normal"
    />

</LinearLayout>
