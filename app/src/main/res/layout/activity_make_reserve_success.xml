<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cn.edu.dlut.tiyuguan.activity.MakeReserveSuccessActivity"
    android:orientation="vertical"
    android:background="@color/light_gray"
    >

    <TextView

        android:text="恭喜你已经预定成功"
        android:textSize="18sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/make_reserve_success_hint"
        android:gravity="center"
        android:layout_marginTop="14dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        />

    <TextView
        android:id="@+id/id_make_reserve_success_orderid_text_view"
        android:text="订单号:155555"
        android:textSize="14sp"
        android:textColor="@android:color/holo_red_dark"
        android:typeface="monospace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawable="@drawable/make_reserve_success_hint"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <Button
            android:id="@+id/id_make_reserve_success_gohome_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回到首页"
            android:layout_weight="1.0"
            />
        <Button
            android:id="@+id/id_make_reserve_success_continue_make_reserve_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="继续预定"
            android:layout_weight="1.0"
            />
    </LinearLayout>
</LinearLayout>
