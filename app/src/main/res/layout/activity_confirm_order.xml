<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="vertical"
    android:background="@color/light_light_gray"
    tools:context="cn.edu.dlut.tiyuguan.activity.ConfirmOrderActivity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    >
    <!-- divider-->
    <View
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingLeft="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="场馆名"
            android:gravity="center"
            android:textColor="@color/black"

            />
        <TextView
            android:id="@+id/id_confirmorder_venues_name_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="篮球馆"
            android:gravity="center"
            android:textColor="@color/black"

            />
    </LinearLayout>
    <!-- divider-->
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingLeft="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="位置号"
            android:gravity="center"
            android:textColor="@color/black"

            />
        <TextView
            android:id="@+id/id_confirmorder_location_id_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="19"
            android:gravity="center"
            android:textColor="@color/black"

            />
    </LinearLayout>
    <!-- divider-->
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingLeft="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="日期"
            android:gravity="center"
            android:textColor="@color/black"

            />
        <TextView
            android:id="@+id/id_confirmorder_date_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2015-10-14"
            android:gravity="center"
            android:textColor="@color/black"

            />
    </LinearLayout>
    <!-- divider-->
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingLeft="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="时间段"
            android:gravity="center"
            android:textColor="@color/black"

            />
        <TextView
            android:id="@+id/id_confirmorder_time_period_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="19:00 - 20:00"
            android:gravity="center"
            android:textColor="@color/black"

            />
    </LinearLayout>
    <!-- divider-->
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingLeft="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="时长"
            android:gravity="center"
            android:textColor="@color/black"

            />
        <TextView
            android:id="@+id/id_confirmorder_time_duration_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2小时"
            android:gravity="center"
            android:textColor="@color/black"

            />
    </LinearLayout>

    <!-- divider-->
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingLeft="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="金额"
            android:gravity="center"
            android:textColor="@color/black"

            />
        <TextView
            android:id="@+id/id_confirmorder_total_amount_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2 * 5元/小时 = 10元"
            android:gravity="center"
            android:textColor="@color/black"

            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray"
        />
    </LinearLayout>
    <!-- divider-->
    <Button
        android:id="@+id/id_confirmorder_cancel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="取消"
        android:textColor="@color/white"
        android:textSize="@dimen/text_basic_size"
        android:background="@drawable/exit_button_selector"
        />
    <!-- divider-->
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray"
        />
    <Button
        android:id="@+id/id_confirmorder_submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/text_basic_size"
        android:background="@drawable/exit_button_selector"
        />

</LinearLayout>
