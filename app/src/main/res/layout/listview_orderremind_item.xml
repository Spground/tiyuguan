<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:foreground="@drawable/selector_foreground"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:touchscreenBlocksFocus="true"
    card_view:cardCornerRadius="1.5dp"
    card_view:cardElevation="5dp"
    card_view:contentPadding="5dp">

    <LinearLayout
        android:id="@+id/id_activity_record_list_item_bgc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        >
        <!-- 时间段-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="时间段:"
                android:textColor="@color/material_deep_teal_500"
                android:textSize="10sp"
                android:textStyle="bold"
                android:gravity="center|center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                />
            <TextView
                android:id="@+id/id_activity_record_list_listview_item_record_time_period"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2014-12-26 09:00 至 2014-12-26 10:00"
                android:textColor="@color/font_grey_700"
                android:textSize="14sp"
                android:gravity="center|center"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                >
                <!-- 场馆名字 和 场馆位置 第一行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|center"
                            android:text="场馆名:"
                            android:textColor="@color/material_deep_teal_500"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            />
                        <TextView
                            android:id="@+id/id_activity_record_list_listview_item_text_view_venues_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|center"
                            android:text="篮球馆"
                            android:textColor="@color/font_grey_700"
                            android:textSize="12sp"
                            />
                    </LinearLayout>

                    <!-- divider -->
                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/material_deep_teal_500"
                        />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|center"
                            android:textSize="10sp"
                            android:text="位置："
                            android:textStyle="bold"
                            android:textColor="@color/material_deep_teal_500"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            />

                        <TextView
                            android:id="@+id/id_activity_record_list_listview_item_text_view_venues_location"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|center"
                            android:text="10"
                            android:textColor="@color/font_grey_700"
                            android:textSize="12sp"
                            />
                    </LinearLayout>

                </LinearLayout>
                <!-- divider-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/material_deep_teal_500"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:orientation="horizontal"
                    android:paddingLeft="2dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单号:"
                        android:textColor="@color/material_deep_teal_500"
                        android:textSize="10sp"
                        android:textStyle="italic"
                        />
                    <TextView
                        android:id="@+id/id_activity_record_list_listview_item_recordnumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20150202036"
                        android:paddingLeft="5dp"
                        android:textColor="@color/font_grey_700"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        />
                </LinearLayout>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColor="@color/red"
                    android:text="倒计时: 15 分钟"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>